{
    "name": "nico-vromans/phpspec-matchers",
    "description": "Extension for PhpSpec with additional custom Matchers.",
    "type": "phpspec-extension",
    "homepage": "https://github.com/VromansN/phpspec-matchers",
    "authors": [
        {
            "name": "Nico Vromans",
            "homepage": "https://github.com/nico-vromans",
            "role": "Developer"
        }
    ],
    "keywords": [
        "phpspec",
        "extension",
        "matchers"
    ],
    "license": "GPL-3.0-or-later",
    "require": {
        "php": ">=7.2",
        "phpspec/phpspec": "^4.3"
    },
    "require-dev": {
        "leanphp/phpspec-code-coverage": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "NicoVromans\\PhpSpecMatchers\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\": "spec/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpspec run"
    }
}
